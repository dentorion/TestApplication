<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.entin.testapplication.screens.detail.DetailScreenFragment">

    <TextView
        android:id="@+id/detail_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/hello_blank_fragment"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/detail_screen_avatar"
        app:layout_constraintStart_toStartOf="@+id/detail_screen_avatar"
        app:layout_constraintTop_toBottomOf="@+id/detail_screen_avatar" />

    <ImageView
        android:id="@+id/detail_screen_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/detail_screen_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/detail_screen_name"
        app:layout_constraintStart_toStartOf="@+id/detail_screen_name"
        app:layout_constraintTop_toBottomOf="@+id/detail_screen_name" />

</androidx.constraintlayout.widget.ConstraintLayout>